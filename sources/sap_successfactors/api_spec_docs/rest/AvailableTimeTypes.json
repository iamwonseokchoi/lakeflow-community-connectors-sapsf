{
  "openapi": "3.0.3",
  "info": {
    "title": "Time Off Available Time Types",
    "description": "You can use this API to read the available time types of the login user.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://{api-server}",
      "description": "REST APIs for the SuccessFactors Data Centers",
      "variables": {
        "api-server": {
          "description": "SuccessFactors Data Center host",
          "default": "apisalesdemo2.successfactors.eu"
        }
      }
    }
  ],
  "paths": {
    "/rest/timemanagement/absence/v1/availableTimeTypes": {
      "get": {
        "summary": "Gets the available time types for the login user.",
        "description": "Gets the available time types for the login user. The list is based on the Time Profile assigned to the user in Job Information.",
        "tags": [
          "Available Time Types"
        ],
        "parameters": [
          {
            "name": "$at",
            "in": "query",
            "required": true,
            "description": "The date for which the available time types are requested. The date must be in the format YYYY-MM-DD.",
            "schema": {
              "type": "string",
              "example": "2020-03-17"
            }
          },
          {
            "name": "absenceRequestCode",
            "in": "query",
            "required": false,
            "description": "The external code of an existing absence which is used to filter the list of available time type.",
            "schema": {
              "type": "string",
              "example": "b80d6c95369f415dafe13c5f7527513c"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "It indicates that the request is successful and returns the list of available time types.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/AvailableTimeType"
                      }
                    }
                  },
                  "example": {
                    "value": [
                      {
                        "externalCode": "VAC-DAYS",
                        "externalName": "Vacation (Days)",
                        "unit": "Day(s)",
                        "undeterminedEndDateAllowed": false,
                        "leaveOfAbsence": false,
                        "mainAbsenceTimeType": true,
                        "flexibleRequestingAllowed": false,
                        "allowedFractions": "QUARTER_DAY"
                      },
                      {
                        "externalCode": "SICKNESS",
                        "externalName": "Sick Leave",
                        "unit": "Day(s)",
                        "undeterminedEndDateAllowed": false,
                        "leaveOfAbsence": false,
                        "mainAbsenceTimeType": false,
                        "flexibleRequestingAllowed": false,
                        "allowedFractions": "HALF_DAY"
                      },
                      {
                        "externalCode": "LEAVE-UNPAID",
                        "externalName": "Unpaid Leave",
                        "unit": "Hour(s)",
                        "undeterminedEndDateAllowed": false,
                        "leaveOfAbsence": false,
                        "mainAbsenceTimeType": false,
                        "flexibleRequestingAllowed": false,
                        "allowedFractions": "HOURS_MINUTES"
                      }
                    ]
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "403": {
            "$ref": "#/components/responses/403"
          },
          "404": {
            "$ref": "#/components/responses/404"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "sfOauth": {
        "type": "oauth2",
        "description": "Successfactors OAuth 2.0 flow. More information is available [here](https://help.sap.com/docs/SAP_SUCCESSFACTORS_PLATFORM/9f5f060351034d98990213d077dab38a/d9a9545305004187986c866de2b66987.html?locale=en-US)",
        "flows": {
          "clientCredentials": {
            "tokenUrl": "https://{api-server}/oauth/token",
            "scopes": {}
          }
        }
      }
    },
    "schemas": {
      "AllowedFraction": {
        "type": "string",
        "enum": [
          "FULL_DAY",
          "HALF_DAY",
          "QUARTER_DAY",
          "FULL_HOURS",
          "HOURS_MINUTES"
        ],
        "example": "FULL_DAY"
      },
      "AvailableTimeType": {
        "type": "object",
        "properties": {
          "externalCode": {
            "type": "string",
            "example": "VAC-DAYS"
          },
          "externalName": {
            "type": "string",
            "example": "Vacation (Days)"
          },
          "unit": {
            "type": "string",
            "example": "Day(s)"
          },
          "undeterminedEndDateAllowed": {
            "type": "boolean",
            "example": false
          },
          "leaveOfAbsence": {
            "type": "boolean",
            "example": true
          },
          "mainAbsenceTimeType": {
            "type": "boolean",
            "example": true
          },
          "flexibleRequestingAllowed": {
            "type": "boolean",
            "example": false
          },
          "allowedFractions": {
            "$ref": "#/components/schemas/AllowedFraction"
          }
        }
      },
      "BadRequest": {
