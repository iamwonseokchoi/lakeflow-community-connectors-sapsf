{
  "openapi": "3.0.3",
  "info": {
    "title": "Instructional Text",
    "description": "Instructional Text API which enables clients to fetch the instructional text that is defined in the time profile object.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://{api-server}",
      "description": "REST APIs for the SuccessFactors Data Centers",
      "variables": {
        "api-server": {
          "description": "SuccessFactors Data Center host",
          "default": "apisalesdemo2.successfactors.eu"
        }
      }
    }
  ],
  "paths": {
    "/rest/timemanagement/absence/v1/instructionalTextsForEmployeeSelfService": {
      "get": {
        "summary": "Gets localized instructional text assigned within the time profile object.",
        "description": "Gets localized instructional text assigned within the time profile object. This text is supposed to help the employee to correctly request an absence.",
        "tags": [
          "Instructional Text"
        ],
        "parameters": [
          {
            "name": "$at",
            "in": "query",
            "required": true,
            "description": "The date for which the instructional text is requested. The date must be in the format YYYY-MM-DD.",
            "schema": {
              "type": "string",
              "example": "2020-03-17"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "It indicates that the request is successful and returns the instructional text.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InstructionalTextEO"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "403": {
            "$ref": "#/components/responses/403"
          },
          "404": {
            "$ref": "#/components/responses/404"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "sfOauth": {
        "type": "oauth2",
        "description": "Successfactors OAuth 2.0 flow. More information is available [here](https://help.sap.com/docs/SAP_SUCCESSFACTORS_PLATFORM/9f5f060351034d98990213d077dab38a/d9a9545305004187986c866de2b66987.html?locale=en-US)",
        "flows": {
          "clientCredentials": {
            "tokenUrl": "https://{api-server}/oauth/token",
            "scopes": {}
          }
        }
      }
    },
    "schemas": {
      "InstructionalTextEO": {
        "type": "object",
        "properties": {
          "instructionalText": {
            "type": "string"
          }
        },
        "example": {
          "instructionalText": "LocalizedInstructionalText"
        }
      },
      "BadRequest": {
        "title": "Bad Request",
        "description": "Response body",
        "properties": {
          "error": {
            "title": "Error",
            "type": "object",
            "properties": {
              "code": {
                "title": "Code",
                "type": "string",
                "example": "BadRequest"
              },
              "message": {
                "title": "Message",
                "type": "string",
                "example": "Please enter a valid date."
              }
            }
          }
        },
        "type": "object"
      },
      "Forbidden": {
        "type": "object",
        "title": "Forbidden Exception",
        "description": "Response body",
        "properties": {
          "error": {
            "title": "Error",
            "type": "object",
            "properties": {
              "code": {
                "title": "Code",
                "type": "string",
                "example": "Forbidden"
              },
              "message": {
                "title": "Message",
                "type": "string",
                "example": "You can't access the requested resource."
              }
            }
          }
        }
      },
      "NotFound": {
        "title": "Not Found",
        "description": "Response body",
        "properties": {
          "error": {
            "title": "Error",
            "type": "object",
            "properties": {
              "code": {
                "title": "Code",
                "type": "string",
                "example": "NotFound"
              },
              "message": {
                "title": "Message",
                "type": "string",
                "example": "Record for entity TimeProfile with key 2020-03-17 does not exist. Please check the key value."
              },
              "details": {
                "title": "Details",
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "title": "Code",
                      "type": "string",
                      "example": "COE0028"
                    },
                    "message": {
                      "title": "Message",
                      "type": "string",
                      "example": "Record for entity TimeProfile with key 2020-03-17 does not exist. Please check the key value."
                    }
                  }
                }
              }
            }
          }
        },
        "type": "object"
      },
      "InternalServerError": {
        "title": "InternalServerError",
        "description": "Response body",
        "properties": {
          "error": {
            "title": "Error",
            "type": "object",
            "properties": {
              "code": {
                "title": "Code",
